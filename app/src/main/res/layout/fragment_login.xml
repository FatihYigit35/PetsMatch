<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.izmirsoftware.petsmatch.viewmodel.login.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="HOŞ GELDİN"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Giriş yap ve hayalindeki evcil hayvvanı bul"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-posta">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/normal_text_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Şifre">

                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:id="@+id/etPassworad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Şifremi unuttum"
                android:textColor="@color/main_button_gb_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="20dp"
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giriş Yap"
                android:background="@drawable/main_button_gb"
                android:textColor="@color/black"
                android:elevation="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <TextView
                android:layout_marginVertical="15dp"
                android:textAlignment="center"
                android:id="@+id/tvGoToRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yada bu yöntemleri dene"
                android:textColor="@color/main_button_gb_color" />

            <ProgressBar
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/pbSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:background="@drawable/main_button_gb"
                android:tint="@color/white"
                android:padding="6dp"
                android:src="@drawable/google"
                android:layout_gravity="center"
                android:id="@+id/layoutGoogle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
